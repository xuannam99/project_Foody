<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.Food_Activity"
    android:background="#f2f2f2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linear_menu_detail_food"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffff"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#f4061c"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                tools:ignore="MissingConstraints"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img_quaylai_food"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/quay_lai"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:gravity="center"
                        android:id="@+id/txt_detail_namefood_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="name foody"
                        android:textColor="#ffffff"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints"></TextView>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/txt_detail_addressfood_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address foody"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        tools:ignore="MissingConstraints"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/linear_menu_detail_food"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <ImageView
                        android:id="@+id/img_avatarpicture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/banhxeo"
                        android:scaleType="centerCrop" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_detail_food"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="2dp"
                    android:background="#ffff"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:paddingTop="20dp"
                    android:weightSum="3"
                    app:layout_constraintTop_toBottomOf="@+id/linear_menu_detail_food"
                    tools:ignore="MissingConstraints">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trạng thái" />

                        <TextView
                            android:id="@+id/txt_time_ckeck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thời gian" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"></LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:orientation="vertical">
                        <Button
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/phone_book"
                            android:text="Liên hệ"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_map_food"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:layout_constraintTop_toBottomOf="@+id/linear_detail_food"
                    tools:ignore="MissingConstraints">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toBottomOf="@+id/linear_detail_food"
                        tools:ignore="MissingConstraints">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:background="#FFFFFF">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                            <fragment
                                android:id="@+id/google_map"
                                android:name="com.google.android.gms.maps.MapFragment"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                tools:layout_editor_absoluteX="126dp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/map_edit"
                            >
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/img_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/location"
                            android:paddingLeft="5dp"
                            android:paddingTop="10dp"/>
                        <TextView
                            android:id="@+id/txt_location"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="location"
                            android:paddingTop="10dp"
                            android:paddingLeft="10dp"
                            app:layout_constraintLeft_toRightOf="@+id/img_location"/>
                        <TextView
                            android:id="@+id/txt_cham"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            app:layout_constraintTop_toBottomOf="@id/img_location"/>
                        <ImageView
                            android:id="@+id/img_dot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:src="@drawable/dot"
                            app:layout_constraintTop_toBottomOf="@+id/txt_cham"
                            />
                        <TextView
                            android:id="@+id/txt_dot"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="dot"
                            android:paddingLeft="10dp"
                            app:layout_constraintLeft_toRightOf="@+id/img_dot"
                            app:layout_constraintTop_toBottomOf="@+id/txt_cham"/>
                        <ImageView
                            android:id="@+id/img_dia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="15dp"
                            android:paddingLeft="5dp"
                            android:src="@drawable/dia"
                            app:layout_constraintTop_toBottomOf="@+id/txt_dot"
                            />
                        <TextView
                            android:id="@+id/txt_speci_food"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Quan an - mon viet"
                            android:paddingTop="15dp"
                            android:paddingLeft="15dp"
                            app:layout_constraintLeft_toRightOf="@+id/img_dia"
                            app:layout_constraintTop_toBottomOf="@+id/txt_dot"/>
                        <ImageView
                            android:id="@+id/img_price_map"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="15dp"
                            android:paddingLeft="5dp"
                            android:src="@drawable/dola"
                            app:layout_constraintTop_toBottomOf="@+id/img_dia"
                            />
                        <TextView
                            android:id="@+id/txt_price_map"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="100-200k"
                            android:paddingTop="10dp"
                            android:paddingLeft="15dp"
                            app:layout_constraintLeft_toRightOf="@+id/img_price_map"
                            app:layout_constraintTop_toBottomOf="@+id/txt_speci_food"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_menu_delivery_food"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:background="#ffff"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    app:layout_constraintTop_toBottomOf="@+id/linear_map_food"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/correct" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/wifi_icon" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/delivery_man"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_menu_food"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:background="#ffff"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/linear_menu_delivery_food"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp"
                    android:paddingLeft="5dp">
                    <Button
                        android:id="@+id/btn_list_menu_food"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffff"
                        android:drawableLeft="@drawable/menu_icon"
                        android:gravity="center_vertical"
                        android:text="  Thực đơn"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="18dp" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/Constrain_wifi_food"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/linear_menu_delivery_food"
                    android:paddingLeft="5dp">
                    <TextView
                        android:id="@+id/txt_Add_wifi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffff"
                        android:drawableLeft="@drawable/wifi_icon_2"
                        android:gravity="center_vertical"
                        android:text="  Thêm wifi"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="18dp"/>

                    <TextView
                        android:layout_width="96dp"
                        android:layout_height="19dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="24dp"
                        android:text="Nhập mật khẩu"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/txt_Add_wifi" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:id="@+id/linear_menu_ListImege_food"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:background="#ffff"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/linear_menu_food"
                    tools:ignore="MissingConstraints">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
