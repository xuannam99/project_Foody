<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_id"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:weightSum="5"
        >
        <ImageView
            android:padding="1dp"
            android:layout_weight="1"
            android:id="@+id/food_img_search_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@null"/>
        <LinearLayout
            android:layout_weight="4"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView
                    android:paddingTop="5dp"
                    android:id="@+id/food_name_search_id"
                    android:paddingLeft="5dp"
                    android:textColor="#2d2d2d"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="name food"/>
                <TextView
                    android:paddingTop="5dp"
                    android:id="@+id/food_address_search_id"
                    android:paddingLeft="5dp"
                    android:textColor="#FC595555"
                    android:textSize="9sp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"

                    android:text="address food"/>

                <TextView
                    android:paddingTop="5dp"
                    android:id="@+id/food_species_search_id"
                    android:paddingLeft="5dp"
                    android:textColor="#2d2d2d"
                    android:textSize="9sp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="species food"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <TextView
                    android:paddingTop="5dp"
                    android:id="@+id/range_food_id"
                    android:paddingLeft="5dp"
                    android:textColor="#2d2d2d"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="range food"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>